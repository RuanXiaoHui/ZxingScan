<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.formssi.zxinglib.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:inner_height="220dp"
        app:inner_width="220dp"
        app:inner_corner_color="@color/laser_color"
        app:inner_corner_length="30dp"
        app:inner_corner_width="5dp"
        android:layout_gravity="center"
        app:inner_scan_line_color="@color/laser_color"
        app:inner_scan_line_isShow="true"
        app:inner_scan_line_height="2dp"
        app:inner_scan_speed="3dp"
        app:label_text_color="@android:color/white"
        app:label_text_size="16sp"
        app:label_text="@string/scan_qrcode_prompt"
        app:inner_scan_iscircle="true" />
</FrameLayout>